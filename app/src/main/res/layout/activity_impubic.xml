<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           >
            <EditText
                android:id="@+id/et_protect_appkey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="测试的游戏appkey" />
            <EditText
                android:id="@+id/et_protect_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="测试的游戏版本" />
            <EditText
                android:id="@+id/et_protect_channel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="测试的渠道" />
            <EditText
                android:id="@+id/et_protect_userid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="测试的用户id"/>
            <EditText
                android:id="@+id/et_protect_age"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="测试的年龄"
                android:inputType="number"/>
            <Button
                android:id="@+id/btn_protect_init_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="确定" />

            <Button
                android:id="@+id/btn_protect_open_indentifyUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="打开实名制或年龄认证界面" />

            <EditText
                android:id="@+id/et_protect_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="测试的支付金额(元)"
                android:layout_marginTop="10dp"
                android:inputType="number"/>

            <Button
                android:id="@+id/btn_protect_playtime_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="开启时长验证计时" />

            <Button
                android:id="@+id/btn_protect_payment_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="进行可付款金额验证" />

            <Button
                android:id="@+id/btn_protect_playtime_query"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="查询剩余游戏时间" />

            <Button
                android:id="@+id/btn_protect_payment_query"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="查询剩余可支付金额" />
            <Button
                android:id="@+id/btn_protect_query_template"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="查询防沉迷规则" />
            <Button
                android:id="@+id/btn_protect_clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="清空本地储存的用户实名信息" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
